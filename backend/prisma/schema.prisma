generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum PerkType {
  weapon
  armor
}

model Users {
  id       Int    @id @default(autoincrement())
  pseudo   String @unique @db.VarChar(150)
  password String @db.VarChar(150)
}

model Perk {
  id         Int           @id @default(autoincrement())
  name       String        @unique @db.VarChar(150)
  location   PerkLocation? @relation(fields: [locationId], references: [id])
  locationId Int?
  stats      String        @db.VarChar(255)
}

model PerkLocation {
  id    Int      @id @default(autoincrement())
  name  String   @unique @db.VarChar(150)
  type  PerkType
  perks Perk[]
}
